{
  "name": "gridicarus",
  "version": "0.2.5",
  "homepage": "https://kyoto-shift.github.io/gridicarus",
  "description": "A structural approach to CSS Grids.",
  "style": "dist/gridicarus.css",
  "scripts": {
    "test": "npm test && echo Tests passed!",
    "build:dev": "node-sass --include-path scss src/gridicarus.scss dist/gridicarus.css --output-style expanded",
    "build:prod": "node-sass --include-path scss src/gridicarus.scss dist/gridicarus.min.css --output-style compressed",
    "build:git": "npm run build:dev && npm run build:prod",
    "watch": "nodemon -e scss -x \"npm run build:dev\""
  },
  "author": "Judah Caruso Rodriguez <judah@0px.moe> (http://0px.moe)",
  "license": "MIT",
  "keywords": [
    "css grids",
    "grid layout",
    "functional css",
    "framework",
    "css",
    "scss",
    "gridicarus"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kyoto-shift/gridicarus"
  },
  "dependencies": {},
  "devDependencies": {
    "gulp": "^4.0.0",
    "gulp-sass": "^3.2.1",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.10"
  }
}
